<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="technologysociety.socialsaddict"
    android:versionCode="5"
    android:versionName="5.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="technologysociety.socialsaddict.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Light" >
            
               
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

       

        <service
            android:name="technologysociety.socialsaddict.ServiceSocial"
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </service>
        
        <service
            android:name="technologysociety.socialsaddict.NotifyService"
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </service>

        <activity
            android:name="technologysociety.socialsaddict.SettingsActivity"
            android:label="Settings"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="technologysociety.socialsaddict.MainActivity" />
        </activity>
        <activity
            android:name="technologysociety.socialsaddict.Setting"
            android:label="@string/title_activity_setting" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="technologysociety.socialsaddict.MainActivity" />
        </activity>

    </application>

</manifest>