<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
     >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="877dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#336699"
                    android:text="  General"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/aboutapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="#FFFFFF"
                    android:gravity="fill|fill_horizontal"
                    android:text=" About Socials Addict"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/pi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="#FFFFFF"
                    android:gravity="fill|left"
                    android:text=" About Pi developers"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="783dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/never"
                    android:background="#336699"
                    android:text="  Switch"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <CheckBox
                    android:id="@+id/facebookbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/TextView01"
                    android:checked="true"
                    android:text="Activate Facebook"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/twitterbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/facebookbox"
                    android:checked="true"
                    android:text="Activate Twitter"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/instagrambox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/twitterbox"
                    android:checked="true"
                    android:text="Activate Instagram"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/askbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Activate Ask.fm"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/bbmbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Activate BBM"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/tumblrbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/instagrambox"
                    android:checked="true"
                    android:text="Activate tumblr"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/kikbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Activate Kik"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/whatsappbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/instagrambox"
                    android:layout_below="@+id/tumblrbox"
                    android:checked="true"
                    android:text="Activate Whatsapp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bbmtext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="#336699"
                    android:text="  Clear options"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/clear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="#FFFFFF"
                    android:gravity="fill|left"
                    android:text=" Clear all results"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView4tgt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="#336699"
                    android:text="  Spread the word"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/shareapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="#FFFFFF"
                    android:gravity="fill|left"
                    android:text=" liked this app ? Share it"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="#FFFFFF"
                    android:gravity="fill|left"
                    android:text=" Vist Our Website"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>
    </TableRow>

</TableLayout>